<h1>New Post</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
      </div>
      <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', placeholder: "Entery post body" %>
      </div>
      <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
